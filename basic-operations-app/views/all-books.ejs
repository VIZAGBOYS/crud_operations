<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Books</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
   
</head>
<body>
    <!-- Bootstrap Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #007bff;">
        <a class="navbar-brand" href="/">Book App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/books/home">Home</a>
                </li>
  
                <li class="nav-item">
                    <a class="nav-link" href="/books/search">Search</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/books/all">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/books">My Books</a>
                </li>
                
            </ul>
            <div class="navbar-nav ml-auto">
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="text-center">All Books</h1>
        <div class="row">
            <% books.forEach(book => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <% if (book.coverPagePath) { %>
                            <img src="<%= book.coverPagePath %>" alt="<%= book.title %> cover" class="card-img-top" style="height: 300px; object-fit: cover;">
                        <% } else { %>
                            <img src="/images/placeholder.png" alt="No cover available" class="card-img-top" style="height: 300px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= book.title %></h5>
                            <p class="card-text"><%= book.author %></p>
                            <a href="/books/view/<%= book._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Optional Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
