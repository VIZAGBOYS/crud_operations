<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Search</title>
    <link rel="stylesheet" href="/styles/index.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Bootstrap Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #007bff;">
        <a class="navbar-brand" href="/">Book App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/books/search">Search</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/books/all">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/books">My Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/books/new">Create Book</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/books/book-of-the-day">Book of the Day</a>
                </li>                
            </ul>
            <div class="navbar-nav ml-auto">
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="text-center">Book Search</h1>

        <!-- Search Form -->
        <form action="/books/search" method="GET" class="form-inline justify-content-center mb-4">
            <div class="input-group">
                <input type="text" name="query" placeholder="Search books..." required class="form-control">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>

        <!-- Display search results if they exist -->
        <p class="text-center"><%= books.length %> items found</p> <!-- Display number of search results -->
        <div class="row">
            <% if (books && books.length > 0) { %>
                <% books.forEach(book => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="<%= book.coverPagePath %>" alt="<%= book.title %>" class="card-img-top" style="height: 200px; object-fit: cover;"> <!-- Book Image -->
                            <div class="card-body">
                                <h5 class="card-title"><%= book.title %></h5>
                                <p class="card-text">by <%= book.author %> (<%= book.publishYear %>)</p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else if (searchPerformed) { %> 
                <!-- Show message if search was performed but no books were found -->
                <p class="text-center">No books found for your search query.</p>
            <% } %>
        </div>
    </div>

    <!-- Optional Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
